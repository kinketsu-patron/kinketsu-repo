<UserControl x:Class="Pachislot_DataCounter.Views.Counter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="900"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="{Binding SixthDigit}" Margin="0,0,2,0" Width="Auto" />
        <Image Source="{Binding FifthDigit}" Margin="2,0,2,0" Width="Auto" />
        <Image Source="{Binding ForthDigit}" Margin="2,0,2,0" Width="Auto" />
        <Image Source="{Binding ThirdDigit}" Margin="2,0,2,0" Width="Auto" />
        <Image Source="{Binding SecondDigit}" Margin="2,0,2,0" Width="Auto" />
        <Image Source="{Binding FirstDigit}" Margin="2,0,0,0" Width="Auto" />
    </StackPanel>
</UserControl>
