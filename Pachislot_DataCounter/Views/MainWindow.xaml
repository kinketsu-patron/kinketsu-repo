                <Image Grid.Column="0" Grid.Row="7" Source="/Resource/ゲーム数.png" HorizontalAlignment="Left" />
                <Image Grid.Column="1" Grid.Row="7" Source="/Resource/累計.png" HorizontalAlignment="Center" />
                <StackPanel Grid.Column="2" Grid.Row="7" Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
