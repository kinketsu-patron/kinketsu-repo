                        <local:Number Width="40" Numeric="{Binding TotalThousandsPlace}"/>
                        <local:Number Width="40" Numeric="{Binding TotalHundredsPlace}"/>
                        <local:Number Width="40" Numeric="{Binding TotalTensPlace}"/>
                        <local:Number Width="40" Numeric="{Binding TotalOnePlace}"/>
