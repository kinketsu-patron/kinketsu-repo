                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <!--ユーザーコントロールのレギュラーボーナスカウンター-->
            <ContentControl prism:RegionManager.RegionName="RegularBonusCounter" />
        </StackPanel>

        <!--======================================-->
        <!--ゲーム数(ボーナス間)と累計ゲーム数    -->
