                <!--列の定義-->
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>
                <!--行の定義-->
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.2*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.2*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                
                <ContentControl prism:RegionManager.RegionName="ContentRegion" />

                
                <!--======================================-->
                <!--左側情報                              -->
                <!--======================================-->

                <!--======================================-->
                <!--ビッグボーナスの回数                  -->
                <!--======================================-->
                <Image Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Source="/Resource/飾り枠(セクション).png" />
                <Image Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Source="/Resource/BB.png" HorizontalAlignment="Left" />
                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Center">
                        <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                                <DataTrigger Binding="{Binding InBigBonus}" Value="true">
                                                        <DataTrigger.EnterActions>
                                                                <BeginStoryboard Name="BeginBB_Blink" Storyboard="{StaticResource Bonus_Blink}"/>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="BeginBB_Blink"/>
                                                        </DataTrigger.ExitActions>
                                                </DataTrigger>
                                        </Style.Triggers>
                                </Style>
                        </StackPanel.Style>

                        <local:Number Width="90" Numeric="{Binding BBTensPlace}"/>
                        <local:Number Width="90" Numeric="{Binding BBOnePlace}"/>
                </StackPanel>

                <!--======================================-->
                <!--レギュラーボーナスの回数              -->
                <!--======================================-->
                <Image Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Source="/Resource/飾り枠(セクション).png" />
                <Image Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" Source="/Resource/RB.png" HorizontalAlignment="Left" />
                <StackPanel Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Center">
                        <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                                <DataTrigger Binding="{Binding InRegularBonus}" Value="true">
                                                        <DataTrigger.EnterActions>
                                                                <BeginStoryboard Name="BeginRB_Blink" Storyboard="{StaticResource Bonus_Blink}"/>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
