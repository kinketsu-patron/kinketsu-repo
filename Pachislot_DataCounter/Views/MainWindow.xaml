                                                        </DataTrigger.ExitActions>
                                                </DataTrigger>
                                        </Style.Triggers>
                                </Style>
                        </StackPanel.Style>
                        <local:Number Width="90" Numeric="{Binding RBTensPlace}"/>
                        <local:Number Width="90" Numeric="{Binding RBOnePlace}"/>
                </StackPanel>

                <!--======================================-->
                <!--ゲーム数(ボーナス間)と累計ゲーム数    -->
